{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "./node_modules/.bin/rsbuild build",
      "problemMatcher": []
    },
    {
      "label": "deploy",
      "type": "shell",
      "command": "scp -r build/* bui@192.168.1.153:/var/www/html/ && echo 'Deployed to Pi'"
    },
    {
      "label": "build + deploy",
      "group": { "kind": "build", "isDefault": true },
      "dependsOn": ["build", "deploy"],
      "dependsOrder": "sequence"
    }
  ]
}
